<?xml version='1.0' encoding='utf-8'?>
<widget id="com.acsilserver.epitech" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <icon height="256" src="res/icon_256.png" width="256" />
    <icon height="64" src="res/icon_64.png" width="64" />
    <icon height="48" src="res/icon_18.png" width="48" />
    <name>Acsliserver</name>
    <description>
        The client app for your Acsilserver
    </description>
    <author email="contact@acsilserver.com" href="http://acsilserver.com">
      Acsilserver Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <icon height="128" src="res/icon_128.png" width="128" />
</widget>
