#!/bin/sh
# postinst script for acsilserver
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# source debconf stuff
. /usr/share/debconf/confmodule
# source dbconfig-common shell library, and call the hook function
. /usr/share/dbconfig-common/dpkg/postinst.mysql 
dbc_generate_include_owner="root:www-data"
dbc_generate_include_perms="0640"
dbc_generate_include=template:/etc/acsilserver/parameters.yml
dbc_generate_include_args="-o template_infile=/usr/share/doc/acsilserver/parameters.tpl.yml -U"
dbc_go acsilserver $@

case "$1" in
    configure)
		# Apache config
		webserver="apache2"
		if [ -d /etc/$webserver/sites-available ] && [ ! -e /etc/$webserver/sites-available/acsilserver ]; then
			ln -s /etc/acsilserver/acsilserver-vhost /etc/$webserver/sites-available/acsilserver
		fi
		a2ensite acsilserver > /dev/null || true
		service apache2 reload

		if [ ! -f /etc/acsilserver/parameters.yml ]; then
			touch /etc/acsilserver/parameters.yml
			chown root:www-data /etc/acsilserver/parameters.yml
			chmod 0640 /etc/acsilserver/parameters.yml
		fi
		if [ ! -e /usr/share/acsilserver/app/config/parameters.yml ]; then
			ln -s /etc/acsilserver/parameters.yml /usr/share/acsilserver/app/config/parameters.yml
		fi

		# Build assets & clean cache
		sconsole=/usr/share/acsilserver/app/console
		php $sconsole assets:install /usr/share/acsilserver/web
		php $sconsole assetic:dump --env=prod --no-debug
		php $sconsole cache:clear --env=prod

		# Setting permissions for www-data...
		mkdir -p /usr/share/acsilserver/app/cache
		chown -R www-data /usr/share/acsilserver/app/cache
		mkdir -p /usr/share/acsilserver/app/logs
		chown -R www-data /usr/share/acsilserver/app/logs
		mkdir -p /usr/share/acsilserver/web/uploads
		chown -R www-data /usr/share/acsilserver/web/uploads

		# Add mobile app token
		php $sconsole acsilserver:api:client:populate
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
