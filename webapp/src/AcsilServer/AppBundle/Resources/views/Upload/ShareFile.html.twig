<form id="shareFileForm" action=" method="post" {{ form_enctype(shareForm) }}>
    {# {{ form_widget(shareForm) }} #}
{# Page for files' sharing #}
	
	{% if errorShare is defined %}
		{% if errorShare == "No friends" %}
			<script type="text/javascript"> alert('This user does not exist.');
				javascript:history.back(); {# To have css/js #}
			</script>
		{% endif %}
	{% endif %}
	
	<div class="row-fluid">
	
		<div class="control-group span8">
		    {#{{ form_label(shareForm.userMail, shareForm.userMail.vars.id|replace({'_':'.'}), {'label_attr': {'class': 'control-label'}}) }}#}
		    Email
		    <div class="controls">
			    {{ form_errors(shareForm.userMail) }}
			    {{ form_widget(shareForm.userMail, {'attr': {'class': 'span12 typeaheadUserMail', 'autocomplete': 'off', 'data-provide': 'typeahead' }}) }}
			</div><!-- controls -->
		</div><!-- control group -->
		
		<div class="control-group span4">
		    {#{{ form_label(shareForm.rights, shareForm.rights.vars.id|replace({'_':'.'}), {'label_attr': {'class': 'control-label'}}) }}#}
		    Choose rights
		    <div class="controls">
			    {{ form_errors(shareForm.rights) }}
			    {{ form_widget(shareForm.rights, {'attr': {'class': 'span12'}}) }}
			</div><!-- controls -->
		</div><!-- control group -->
	
	</div><!-- row fluid -->

    <input class="btn btn-primary" type="submit" value="{{ 'Share'|trans }}" />
	<a class="noconfirm btn btn-danger" href="{{ path('_managefile', {'folderId': folderId|default(0)}) }}">{{ 'Cancel'|trans }}</a>
</form>