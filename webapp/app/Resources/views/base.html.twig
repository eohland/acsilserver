<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>
{% block stylesheets %}       
 {% stylesheets 
		filter='cssrewrite'
        	'@AcsilServerAppBundle/Resources/public/css/*'
         %}
            <link rel="stylesheet" href="{{ asset('public/css/font-awesome.min.css') }}" media="all" type="text/css"> {#font-awesome doesn't work on IE and FF so we have to use this one#}
			<link rel="stylesheet" href="{{ asset('public/css/bootstrap.min.css') }}">
        	<link rel="stylesheet" href="{{ asset('public/css/bootstrap-responsive.min.css') }}">
        	<link rel="stylesheet" href="{{ asset('public/css/main.css') }}">
 	
        	<link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
{% endblock %}
	
	<link rel="shortcut icon" href="{{ asset('icone.ico') }}" type="image/x-icon"/>

    </head>
    <body id=login-body>
    	<div id="background">
    		<div class="row-fluid">
	    		<div class="span10 offset1">
			    	<div id="site">
			    		{% include '::ent.html.twig' %}
				    	
			    		{% include '::menu.html.twig' %}
			    		
				        {% block body %}
				        	
				        {% endblock %}
				        
				    	{% include '::footer.html.twig' %}
			    	</div><!-- site -->
		    	</div><!-- span10 -->
	    	</div><!-- row-fluid -->
    	</div><!-- background -->
        {% javascripts 
        	'@AcsilServerAppBundle/Resources/public/js/*' 
        %}
			<script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
			<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
			<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        	<script src="{{ asset('public/js/bootstrap.min.js') }}" type="text/javascript"></script>
        	<script src="{{ asset('public/js/main.js') }}" type="text/javascript"></script>
        {% endjavascripts %}
    </body>
</html>
